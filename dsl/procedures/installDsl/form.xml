      <required>1</required>
      <value>com.electriccloud:EC-dslDeploy</value>
      <documentation>Artifact name that contains the DSL code</documentation>
  </formElement>
    <formElement>
        <type>entry</type>
        <label>Artifact Version</label>
        <property>artVersion</property>
