        <required>1</required>
        <documentation>Artifact version that contains the DSL code</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Server Local Pool</label>
        <property>pool</property>
        <required>1</required>
        <value>local</value>
        <documentation>Server pool</documentation>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <label>Broadcast</label>
        <property>broadcast</property>
        <required>1</required>
        <checkedValue>true</checkedValue>
        <uncheckedValue>false</uncheckedValue>
        <initiallyChecked>1</initiallyChecked>
        <value>false</value>
        <documentation>Server pool</documentation>
